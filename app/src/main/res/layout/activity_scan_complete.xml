<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.ScanCompleteActivity">



    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="782px"
        android:layout_height="782px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:elevation="0dp"
        app:cardCornerRadius="391px">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="62dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="782px"
            android:layout_height="782px"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:visibility="invisible" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102px"
        android:text="Scansione completata"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#454545"
        android:textSize="72px" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="48px"
        android:text="Scansione completata"
        android:textAlignment="center"
        android:textColor="#858585"
        android:textSize="47px" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="220px"
        android:layout_marginStart="280px"
        android:layout_marginLeft="280px"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_home_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="220px"
        android:layout_marginStart="280px"
        android:layout_marginLeft="280px"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_save_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="220px"
        android:layout_marginEnd="280px"
        android:layout_marginRight="280px"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:backgroundTint="#BDBDBD"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

</RelativeLayout>