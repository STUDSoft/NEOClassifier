<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.UserRegisteredActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="782px"
        android:layout_height="782px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106px"

        app:srcCompat="@drawable/doctor" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="102px"
        android:text="Hai creato il tuo profilo"
        android:textAlignment="center"
        android:textColor="#454545"
        android:textSize="72px" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="48px"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Ora esegui la tua prima scansione oppure vai alla home"
        android:textAlignment="center"
        android:textColor="#858585"
        android:textSize="47px" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="220px"
        android:layout_marginStart="280px"
        android:layout_marginLeft="280px"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/floatingActionButton"
        android:layout_marginEnd="280px"
        android:layout_marginRight="280px"
        android:layout_marginBottom="220px"
        app:backgroundTint="#BDBDBD"
        android:tint="#FFFFFF"
        android:clickable="true"
        app:srcCompat="@drawable/ic_home_black_24dp" />

</RelativeLayout>